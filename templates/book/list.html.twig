{% extends "base.html.twig" %}

{% block body %}
    {% for book in pager %}
        <div class="card mb-5">
            <div class="card-body">
                <h5 class="card-title">{{ book.title }}</h5>
                <h6 class="card-subtitle mb-2 text-muted">{{book.author}}</h6>
                <p class="card-text">{{book.description}}</p>
            </div>
        </div>
    {% endfor %}

    {% if pager.count > pager.maxPerPage %}
        {{ pagerfanta(pager) }}
    {% endif %}

{% endblock %}
